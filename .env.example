# .env - set by CI or locally for testing
BLUE_IMAGE=yourrepo/app-blue:latest
GREEN_IMAGE=yourrepo/app-green:latest
ACTIVE_POOL=blue
RELEASE_ID_BLUE=blue-1.2.3
RELEASE_ID_GREEN=green-1.2.3
PORT=3000
NGINX_PORT=8080
BLUE_HOST_PORT=8081
GREEN_HOST_PORT=8082

# observability
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ
ERROR_RATE_THRESHOLD=2        # percent (default 2)
WINDOW_SIZE=200               # sliding window size (default 200 requests)
ALERT_COOLDOWN_SEC=300        # seconds between repeated alerts
MAINTENANCE_MODE=false        # set to true to suppress alerts during planned changes
LOG_PATH=/var/log/nginx/access.log
