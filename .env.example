# Copy to .env and fill in secrets (do NOT commit secrets)
# Slack
SLACK_WEBHOOK_URL=

# Blue/Green initial pool
ACTIVE_POOL=blue

# Alerting thresholds
ERROR_RATE_THRESHOLD=2.0
WINDOW_SIZE=200
ALERT_COOLDOWN_SEC=300

# App image placeholders (replace with your Stage2 app images)
BLUE_IMAGE=yourrepo/app-blue:latest
GREEN_IMAGE=yourrepo/app-green:latest
RELEASE_ID_BLUE=blue-1.0.0
RELEASE_ID_GREEN=green-1.0.0

# Ports
PORT=3000
BLUE_HOST_PORT=8081
GREEN_HOST_PORT=8082
NGINX_PORT=8080
